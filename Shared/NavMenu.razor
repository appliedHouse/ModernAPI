@inject NavigationManager NavManager
@inject IConfiguration Config

<ul class="nav bg-light">

    @if (IsMnuToken)
    {
        <li class="nav-item">
            <div class="nav-link">
                <button class="btn btn-primary" @onclick="mnuToken">TOKEN</button>
            </div>
        </li>
    }

    @if (IsMnuAssets)
    {
        <li class="nav-item">
            <div class="nav-link">
                <button class="btn btn-primary" @onclick="mnuAssets">ASSETS</button>
            </div>
        </li>
    }

    @if (IsMnuImport)
    {
        <li class="nav-item">
            <div class="nav-link">
                <button class="btn btn-primary" @onclick="mnuImport">Import</button>
            </div>
        </li>
    }

    @if (IsMnuImport)
    {
        <li class="nav-item">
            <div class="nav-link">
                <button class="btn btn-primary" @onclick="mnuCustody">Custodian</button>
            </div>
        </li>
    }

    @if (IsCustomFields)
    {
        <li class="nav-item">
            <div class="nav-link">
                <button class="btn btn-primary" @onclick="mnuCustomFields">Custom Fields</button>
            </div>
        </li>

    }


</ul>

@code {

    public bool IsMnuToken { get; set; } = false;
    public bool IsMnuAssets { get; set; } = false;
    public bool IsMnuImport { get; set; } = false;
    public bool IsCustomFields { get; set; } = false;


    protected override void OnInitialized()
    {
        IsMnuToken = Config.GetValue<bool>("IsToken");
        IsMnuAssets = Config.GetValue<bool>("IsAssets");
        IsMnuImport = Config.GetValue<bool>("IsImport");
        IsCustomFields = Config.GetValue<bool>("IsCustomFields");

    }






    public void mnuToken() { NavManager.NavigateTo("/Token"); }
    public void mnuAssets() { NavManager.NavigateTo("/Assets"); }
    public void mnuImport() { NavManager.NavigateTo("/Import"); }
    public void mnuCustody() { NavManager.NavigateTo("/Custody"); }
    public void mnuCustomFields() { NavManager.NavigateTo("/CustomFields"); }
}